---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<header class="page-header print">
			cv-luis-brito.vercel.app
		</header>
		<slot />
	</body>
</html>
<style is:global>
	html{
		font-family: Menlo, Monaco Lucida Console, 'Courier new', 'Courier New', Courier, monospace;
		background: #fff;
		letter-spacing: -0.025rem;
	}
	body,
	figure{
		margin: 0;
		padding: 0;
	}
  .page-header {
    position: sticky;
    top: 0;
    background: #fdfdfd;
    color: #444;
    text-align: center;
    padding: 0.5rem;
    font-size: 1rem;
    font-weight: bold;
    border-bottom: 1px solid #eee;
    z-index: 1000;
  }
	a{
		text-decoration: none;
	}

	ul{
		list-style: none;
		margin: 0;
		padding: 0;
	} 

	*, *::before, *::after{
		box-sizing: border-box;
	}
	h1,h2,h3,h4{
		margin: 0;
		font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
	}
	p{
		color: #666;
		font-size: .9rem;
		line-height: 1.5;
		margin: 0;
		text-wrap: pretty;
	}

/* 	@media (prefers-color-scheme: dark){
		html{
			background: #000;
			color: #fff;
		}
	} */
	@media print{
		.no-print{
			display: none !important;
		}
	}
	.print{
		display: none !important;
	}


	@media print {
	.print {
			display: block !important;
	}
	main{
		padding: 1rem;
		margin: auto;
		width: 100%;
	}
	}
</style>
