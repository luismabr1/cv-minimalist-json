---
import { basics } from 'cv.json';
import Section from '@/components/Section.astro';
import Email from '@/components/icons/Mail.astro';
import Phone from '@/components/icons/Phone.astro';
import LinkedIn from '@/components/icons/LinkedIn.astro';
import GitHub from '@/components/icons/GitHub.astro';
import WorldMap from '@/components/icons/WorldMap.astro';
import Platzi from '../icons/Platzi.astro';

// Define social icons map with type safety
const SOCIAL_ICONS: Record<string, any> = {
  GitHub,
  LinkedIn,
  Platzi
  // Note: Add other icons (e.g., Platzi) if components are created
};

// Access environment variables
const { VITE_EMAIL, VITE_PHONE } = import.meta.env;
// Destructure basics with type safety
const { name, label,profiles, image } = basics;
const { city, region } = basics.location;

// Prepare LinkedIn URL for print info
const linkedInfo = profiles.find(({ network }) => network === 'LinkedIn');
const linkedinUrl = linkedInfo?.url;
const printInfo = [VITE_EMAIL, VITE_PHONE, linkedinUrl].filter(Boolean).join(' â€¢ ');
---

<Section>
  <div class="container">
    <div class="info">
      <h1>{name}</h1>
      <h2>{label}</h2>
      <span>
        <WorldMap />
        {city}, {region}
      </span>
      <footer class="print accessible-info">
        {printInfo}
      </footer>
      <footer class="no-print">
        {VITE_EMAIL && (
          <a
            href={`mailto:${VITE_EMAIL}`}
            title={`Send an email to ${name} at ${VITE_EMAIL}`}
            target="_blank"
            rel="noopener noreferrer"
            aria-label={`Email ${name}`}
          >
            <Email />
          </a>
        )}
        {VITE_PHONE && (
          <a
            href={`tel:${VITE_PHONE}`}
            title={`Call ${name} at ${VITE_PHONE}`}
            target="_blank"
            rel="noopener noreferrer"
            aria-label={`Call ${name}`}
          >
            <Phone />
          </a>
        )}
            {profiles
            .filter(({ url }) => typeof url === "string" && url.length > 0)
            .map(({ network, url, username }) => {
                const Icon = SOCIAL_ICONS[network]
                if (!Icon) return null
                return (
                <a
                    href={url}
                    title={`Visitar el perfil de ${name} en ${network}`}
                    target="_blank"
                    rel="noopener noreferrer"
                >
                    <Icon />
                </a>
                )
            })
            }
      </footer>
    </div>
  </div>
</Section>

<style>
  .container {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
    gap: 1rem;
  }
  .info {
    font-size: 0.65rem;
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    padding-right: 32px;
  }
  h1 {
    font-size: 2rem;
    margin: 0;
  }
  h2 {
    color: #444;
    font-weight: 500;
    font-size: 1.1rem;
    text-wrap: balance;
    margin: 0.5rem 0;
  }
  img {
    aspect-ratio: 1 / 1;
    object-fit: cover;
    width: 128px;
    border-radius: 12px;
  }
  span {
    color: #666;
    display: flex;
    align-items: center;
    gap: 0.25rem;
    font-size: 0.85rem;
    letter-spacing: -0.05rem;
  }
  footer {
    color: #888;
    font-size: 0.65rem;
    display: flex;
    gap: 4px;
    margin-top: 8px;
  }
  footer a {
    color: #777;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    border: 1px solid #eee;
    padding: 4px;
    height: 32px;
    border-radius: 6px;
    transition: all 0.3s ease;
  }
  footer a:hover {
    background: #eee;
    border: 1px solid #ddd;
  }
  .accessible-info {
    word-break: break-all;
  }
</style>